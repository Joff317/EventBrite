<div class="card">
   <div class="card-header font-weight-bold">
   <h3>Avatar actuel</h3>
  <%if @user.avatar.attached?%>
  <%= image_tag @user.avatar, alt: 'avatar' %>
  <%else%>
  <p>=== Il n'y à pas encore d'avatar lié à cet utilisateur===</p>
  <%end%>
  <h3>Changer d'avatar ?</h3>
<%= form_tag user_avatars_path(@user), multipart: true do %>
  <%= file_field_tag :avatar %>
  <%= submit_tag "mettre à jour" %>
<% end %>
   </div>
   <div class="card-body">                
      <h4 class="card-title"> Prenom : <%=@user.first_name%></h4>
      <div class="card-text">
      <p> Nom : <%=@user.last_name%></p>
      <p> Description : <%=@user.description%></p>
      <p> Email : <%=@user.email%></p>
      <%= link_to "Edit your password", edit_user_registration_path(@user) %>
      </div>

      <p> Voici ses événements : </p>
      <% @events.each do |event| %>
         <% if event.admin_id == @user.id %>
         <p><%= event.title%></p>
      <%= link_to "Aller sur l'événement", event_path(event.id) %>   
      <% end %> 
      <% end %>
   </div>  
</div>