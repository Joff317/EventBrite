<div class="card">
   <div class="card-header font-weight-bold">
   <img src="https://source.unsplash.com/200x200/?portrait?sig=<%=rand(1..50)%>" 
                     alt="avatar" class="rounded-circle img-fluid" style="width: 150px;"> 
   </div>
   <div class="card-body">                
      <h4 class="card-title"> Prenom : <%=@user.first_name%></h4>
      <div class="card-text">
      <p> Nom : <%=@user.last_name%></p>
      <p> Description : <%=@user.description%></p>
      <p> Email : <%=@user.email%></p>
      <%= link_to "Edit your password", edit_user_registration_path(@user) %>
      </div>

      <p> Voici ses événements : </p>
      <% @events.each do |event| %>
         <% if event.admin_id == @user.id %>
         <p><%= event.title%></p>
      <%= link_to "Aller sur l'événement", event_path(event.id) %>   
      <% end %> 
      <% end %>
   </div>  
</div>